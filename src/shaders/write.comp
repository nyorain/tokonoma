#version 450

layout(set = 0, binding = 0) buffer Buf {
	float vals[];
} buf;

layout(set = 0, binding = 1) uniform Commands {
	vec4 vals[];
} cmds;

void main() {
	for(int i = 0; i < cmds.vals.length(); ++i) {
		vec4 cmd = cmds.vals[i];
		buf.vals[int(cmd.x)] = cmd.y;
		buf.vals[int(cmd.z)] = cmd.w;
	}
}
